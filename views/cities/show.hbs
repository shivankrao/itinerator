<main>
<br>
<br>
    <div class="city-container-show">
        <header>
            <h2 style="text-align:center"> {{cities.name}} </h2>
        </header>
        <div style="text-align:center">
        <img src="{{cities.img}}" alt="">
        </div>
        <br>
        <p>{{cities.description}} </p>
        <h1 style="text-align:center">Activities:</h1>
        <br>
        <div style="text-align:center" class="container">
            <div class = "row">
        {{#each cities.activities}}
        <div class="col-md-4">
        <h2>Name</h2>
        <p>{{name}} </p>
        <h2>Description:</h2>
        <p>{{description}} </p>
        <h2>Location:</h2>
        <p>{{location}} </p>
        <h2>Price:</h2>
        <p>{{price}} </p>
        </div>
        {{/each}}
        </div>
        </div>
    </div>
   

</main>